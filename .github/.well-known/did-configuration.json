const fs = require('fs');
const path = require('path');

const DID_CONFIG = {
  // ... use the JSON above
};

const WELL_KNOWN_PATH = path.join(__dirname, '..', '.well-known');

// Ensure directory exists
if (!fs.existsSync(WELL_KNOWN_PATH)) {
  fs.mkdirSync(WELL_KNOWN_PATH, { recursive: true });
}

// Write DID configuration
fs.writeFileSync(
  path.join(WELL_KNOWN_PATH, 'did.json'),
  JSON.stringify(DID_CONFIG, null, 2)
);

